# Increase volume
"pactl set-sink-volume @DEFAULT_SINK@ +2000"
   XF86AudioRaiseVolume

# Decrease volume
"pactl set-sink-volume @DEFAULT_SINK@ -2000"
   XF86AudioLowerVolume

# Mute volume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
   XF86AudioMute

# Mute microphone
"pactl set-source-mute @DEFAULT_SOURCE@ toggle"
   XF86AudioMicMute
# Increase brightness
"brightnessctl set +2 && killall herbe 2> /dev/null || echo && herbe $(unixtool brightness_percent)"
	XF86MonBrightnessUp
# Decrease brightness
"brightnessctl set 2- && killall herbe 2> /dev/null || echo && herbe $(unixtool brightness_percent)"
	XF86MonBrightnessDown
